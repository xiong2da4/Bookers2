<h1>User info</h1>
<div class ="side">

<%if @user.profile_image_id != nil %>
<%= attachment_image_tag @user, :profile_image, size: "100x100" %>
<% else %>
<img src="/user_images/forest.jpg" width="100" height="100" >
<% end %>
<br>
<span>name</span><%= @user.name %>
<br>
<span>intro</span><%= @user.introduction %>
<br>
<%= link_to "edit", edit_user_path(current_user) %>
</div>

<h1>新規投稿</h1>
<%= form_for(@book) do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_field :body %>
  <br>
  <%= f.submit "Create Book" %>
<% end %>

