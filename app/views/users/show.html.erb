<h1>User info</h1>
<div class ="side">

<%= attachment_image_tag @user, :profile_image, size: "100x100", fallback: "default.png" %>
<br>
<span>name</span><%= @user.name %>
<br>
<span>intro</span><%= @user.introduction %>
<br>
<%= link_to "edit", edit_user_path(current_user) %>
<%= render "new" %>
</div>

<div class="main">
<h1>Books</h1>
<% @user.books.each do |book| %>
  <%= attachment_image_tag @user, :profile_image, size: "100x100" %>
  <%= link_to book.title, book_path(book) %>
  <%= book.body %>
  <br>
<% end %>

</div>