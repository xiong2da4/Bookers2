<div class="container">
<div class="row">
    <div class="col-xs-3">
    <h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, size: "50x50", fallback: "default.jpg" %>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>intro</th>
          <th><%= @user.introduction %></th>
        </tr>
      </tbody>
    </table>
      <div class="row">
        <%= link_to "", edit_user_path(current_user), class:"btn btn-default glyphicon glyphicon-wrench col-xs-12" %>
      </div>
      <%= render "new" %>
    </div>

    <div class="col-xs-9">
     <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @user.books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
              <%= attachment_image_tag @user, :profile_image, size: "50x50", fallback: "default.jpg" %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      </div>
  </div>
</div>