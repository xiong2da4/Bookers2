<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render "common" %>
    </div>

    <div class="col-xs-9">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <th><%= attachment_image_tag user, :profile_image, size: "50x50", fallback: "default.jpg" %></th>
            <th><%= user.name %></th>
            <th><%= link_to "Show", user_path(user) %></th>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>