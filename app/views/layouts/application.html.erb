<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if user_signed_in? %>
      <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span class="maintitle">Bookers</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
              <li>
              <%= link_to user_path(current_user) do %>
                <span class="glyphicon glyphicon-home"> Home</span>
              <% end %>
            </li>
            <li>
              <%= link_to users_path do %>
                <span class="glyphicon glyphicon-link"> Users</span>
              <% end %>
            </li>
            <li>
              <%= link_to books_path do %>
                <span class="glyphicon glyphicon-edit"> Books</span>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <span class="glyphicon glyphicon-log-in"> logout</span>
              <% end %>
            </li>
          </ul>
        </nav>
      </div>
    </header>
  <% else %>
      <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span class="maintitle"> Bookers</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
          <li>
          <%= link_to root_path do %>
            <span class="glyphicon glyphicon-home"> Home</span>
          <% end %>
        </li>
        <li>
          <%= link_to about_path do %>
            <span class="glyphicon glyphicon-link"> About</span>
          <% end %>
        </li>
        <li>
          <%= link_to new_user_registration_path do %>
            <span class="glyphicon glyphicon-edit"> sign up</span>
          <% end %>
        </li>
        <li>
          <%= link_to new_user_session_path do %>
            <span class="glyphicon glyphicon-log-in"> login</span>
          <% end %>
        </li>
          </ul>
        </nav>
      </div>
    </header>
  <% end %>

  <br>
  
  <% if notice %>
  <p><%= notice %></p>
  <% end %>
  <% if alert %>
  <p><%= alert %></p>
  <% end %>


  <%= yield %>
  </body>
  </html>
