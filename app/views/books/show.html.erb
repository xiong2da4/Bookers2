<div class="sidemenu">
<%= render '/books/common', user: @user, book: @booka %>
</div>

<div class="mainmenu">
<h1>Book detail</h1>
<%= link_to user_path(@book.user.id) do %>
<%= attachment_image_tag @book.user, :profile_image, size: "100x100", fallback: "default.png" %>
<%= @book.user.name %>
<% end %>
<span><%= @book.title %></span>
<span><%= @book.body %></span>
<% if @book.user_id == current_user.id %>
<%= link_to "Edit", edit_book_path(@book) %>
<%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
</div>