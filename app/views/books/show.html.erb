<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render '/books/common', user: @user, book: @booka %>
    </div>

    <div class="col-xs-9">
      <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                <%= attachment_image_tag @book.user, :profile_image, size: "100x100", fallback: "default.jpg" %>
                <%= @book.user.name %>
                <% end %>
              </td>
              <td><%= @book.title %></td>
              <td><span><%= @book.body %></span></td>
              <% if @book.user_id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@book) %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>