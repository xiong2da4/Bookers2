<% if @book.errors.any? %>
<%= @book.errors.count %>error
<% @book.errors.full_messages.each do |message| %>
  <%= message %>
<% end %>
<% end %>

<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit "Update Book" %>
<% end %>

<%= link_to "Show", book_path(@book) %>
<%= link_to "back", books_path %>